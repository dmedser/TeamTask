# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

GET     /projects                   controllers.HomeController.listProjects

GET     /projects/new               controllers.HomeController.createProject
POST    /projects                   controllers.HomeController.saveProject

GET     /projects/:id              controllers.HomeController.editProject(id:Long)
POST    /projects/:id              controllers.HomeController.updateProject(id:Long)


POST    /computers/:id/delete       controllers.HomeController.deleteProject(id:Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
